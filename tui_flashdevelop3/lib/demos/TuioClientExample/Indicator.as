package {		import flash.display.*;		import flash.events.*;	import flash.utils.Timer;		public class Indicator extends MovieClip {				private var border:Sprite;		private var flash:Sprite;		private var lastBlink:Number;		private var timer:Timer;				public function Indicator(radius:int, color:uint){						this.flash = new Sprite();			this.flash.graphics.beginFill(color, 1);			this.flash.graphics.drawCircle(0,0,radius);			this.flash.graphics.endFill();			this.flash.alpha = 0.1;			this.addChild(this.flash);						this.border = new Sprite();			this.border.graphics.lineStyle(1, color, 0.9);			this.border.graphics.drawCircle(0,0,radius);			this.addChild(this.border);						this.timer = new Timer(50);			var timerListener:Object = new Object();			timerListener.onTimerTick = function(e:TimerEvent):void{				if((new Date().getTime() - lastBlink) > 10){					unBlink();				}			}			timer.addEventListener(TimerEvent.TIMER, timerListener.onTimerTick);		}				public function blink():void{			lastBlink = new Date().getTime();			timer.start();			this.flash.alpha = 1;		}				public function unBlink():void{			timer.stop();			this.flash.alpha = 0.1;		}			}}